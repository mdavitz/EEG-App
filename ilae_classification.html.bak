    /* Color coding for ILAE cards based on seizure type */
    .ilae-card {
      background: var(--info-bg);
      border-radius: 8px;
      padding: 1.2rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      cursor: pointer;
      transition: all 0.2s ease;
